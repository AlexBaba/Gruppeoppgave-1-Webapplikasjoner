@using Nettbutikk.Models;

@{
    IEnumerable<Category> categories = ViewBag.Categories;
    IEnumerable<Product> products = ViewBag.Products;
    int counter = 0;
}
<div class="wrapper">
    <div class="categories">
        <ul class="category-list">
            @foreach (var category in categories)
            {
                <li>
                    @Html.RouteLink(category.Name, new { controller = "category", action = "products", id = category.Id })
                </li>

            }
        </ul>
    </div>
    <div class="content">

        <h1>@ViewBag.CategoryName</h1>

        @foreach (var product in products)
        {
            if (counter++ % 3 == 0)
            {
                @Html.Raw("<div class='row'>")
            }


            <div class="col-md-4">
                @Html.Partial("Product_ListItem", product)
            </div>

            if (counter % 3 == 0)
            {
                @Html.Raw("</div>")
            }
        }

    </div>

</div>

<script>
    $(document).ready(function () {
        $("img").on("error", function () {
            $(this).hide();
        })

        $(".product_listitem a").unbind("click");
        $(".product_listitem a.addItemToCart").click(function () {
            //alert("TODO: legg " + $(this).attr("data-productName") + " i shoppingcart (Product_ListItem.cshtml)")
            $.ajax({
                url: '@Url.Action("AddToCart","Home")',
                data: {
                    ProductId:$(this).attr("id")
                },
                method: "POST",
                success: function (result) {
                    count = parseInt(result);
                    $(".cartCounter").text(count);
                }, error: function (result) {
                    //window.location.href = result;
                    alert(JSON.stringify(result));
                }

        })
    })
    })
</script>