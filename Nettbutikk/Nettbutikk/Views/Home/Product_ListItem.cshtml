@using Nettbutikk.Models
@model Product

<div class="product_listitem">
    <div class="row">
        <div class="col-md-6">
            <div class="listitem_image">
                <img src="@Model.ImageUrl" alt="Bilde av @Model.Name"/>
            </div>

        </div>
        <div class="col-md-6">
            @Html.RouteLink(Model.Name, new { controller = "products", action = "details", Id = Model.Id})
        </div>
        </div>
    <div class="listitem_description_outer">
        <div class="listitem_description">
            <p>@Model.Description</p>
        </div>
    </div>
    <p>Antall på lager: @Model.Stock</p>
    <a href="#" id="@Model.Id" data-productName="@Model.Name" class="btn btn-success">kr @Model.Price,- <span class="glyphicon glyphicon-shopping-cart"></span></a>
</div>

<script>
    $(document).ready(function () {

        $("img").on("error", function ()
        {
            $(this).hide();
        })

        $(".product_listitem a.btn-success")
            .unbind("click")
            .click(function () {
                alert("TODO: legg " + $(this).attr("data-productName") + " i shoppingcart")
            })
    })
</script>